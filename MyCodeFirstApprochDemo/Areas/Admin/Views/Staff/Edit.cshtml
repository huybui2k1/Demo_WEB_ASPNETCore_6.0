@model DemoApproachLibrary.DataAccess.NhanVien

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<header class="panel-heading">
    Cập nhật Nhân viên
</header>
<hr />
<div class="panel-body">
<div class="row">
    <div class="col-md-4">
         @using (Html.BeginForm("Edit", "Staff", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model=>model.MaNhanVien)
            <div class="form-group">
                <label asp-for="TenNhanVien" class="control-label"></label>
                    @Html.EditorFor(model=>model.TenNhanVien,new {htmlAttributes= new{@class="form-control", @placeholder="Mời nhập tên nhân viên"} })
                    @Html.ValidationMessageFor(model => model.TenNhanVien, "", new { @class =
                "text-danger" })

            </div>
            <div class="form-group form-check">
                <label  class="form-check-label"></label>
                    @Html.RadioButtonFor(model => model.GioiTinh,true,new {@class="radio-btn"}) Nam
                    @Html.RadioButtonFor(model => model.GioiTinh,false,new {@class="radio-btn"}) Nữ
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GioiTinh" /> @Html.DisplayNameFor(model => model.GioiTinh)
                </label>
            </div>
            <div class="form-group">
                 <label asp-for="DiaChi" class="control-label"></label>
                    @Html.EditorFor(model=>model.DiaChi,new {htmlAttributes= new{@class="form-control", @placeholder="Mời nhập địa chỉ"} })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class ="text-danger" })
            </div>
            <div class="form-group">
                    <label asp-for="DienThoai" class="control-label"></label>
                    @Html.EditorFor(model=>model.DienThoai,new {htmlAttributes= new{@class="form-control", @placeholder="Mời nhập điện thoại"} })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class =
                "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label"></label>
                    @Html.EditorFor(model=>model.NgaySinh,new {htmlAttributes= new{@class="form-control", @placeholder="Mời nhập ngày sinh"} })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class="text-danger"})
            </div>
            <div class="form-group">
                <input type="submit" value="Cập Nhật" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
</div>
<div>
    @Html.ActionLink("Quay trở lại","Index","Staff",null, new {@class="btn btn-danger"})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
